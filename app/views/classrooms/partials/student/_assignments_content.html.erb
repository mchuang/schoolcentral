<h1>students assignments content</h1>

<div class="col-sm-6">
	<table class="table table-striped assignments-table">
		<h3>Current Assignments</h3>
		<tbody>
			<% if @classroom.current_assignments().empty? %>
				<tr>
					<td>none</td>
				</tr>
			<% else %>
				<% for assignment in @classroom.current_assignments() %>
					<tr>
						<td><%= link_to assignment.name, assignment %></td>
						<td><%= assignment.description %></td>
						<td><%= formatDate(assignment.due) %></td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>
<div class="col-sm-6">
	<table class="table table-striped assignments-table">
		<h3>Past Assignments</h3>
		<tbody>
			<% if @classroom.past_assignments().empty? %>
				<tr>
					<td>none</td>
				</tr>
			<% else %>
				<% for assignment in @classroom.past_assignments %>
					<% if assignment.due < DateTime.now %>
						<tr>
							<td><%= link_to assignment.name, assignment %></td>
							<td><%= assignment.description %></td>
							<td><%= formatDate(assignment.due) %></td>
						</tr>
					<% end %>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>