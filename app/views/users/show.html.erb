<div class="background">

	<div class="user-profile">

		<!-- Link to reroute to the user dashboard -->
		<a class="btn btn-link btn-lg back-btn-padding" href='#' onclick='history.go(-1);return false;'>Back</a>


		<div class="core-user-info">
			<!-- Alert message gives user edits confirmation -->
			<% unless flash.nil? %>
				<% flash.each do |name, msg| %>
					<% if msg != 'Signed in successfully.'%>
						<div class="user-msg-styling alert alert-<%=name%>" role="alert"> <%= msg %> </div>
					<% end %>
				<% end %>
			<% end %>


			<!-- Contains the users ID photo -->
			<div class="user-portrait">
				<img src="http://simpleicon.com/wp-content/uploads/user1-150x150.png">
			</div>

			<!-- Div containing all the user's information in the form of an accordian -->
			<div class="user-info">

				<!-- Beginning of accordian  -->
				<div class="panel-group no-padding-panel" id="accordion">

				  <div class="panel first-panel-row">
				    <div class="panel-heading">
				      <h4 class="panel-title panel-height">
				      	<div class="col-sm-3 panel-label-color">
					        Identifier
					    </div>
					    <div class="col-sm-8 panel-value-color">
					        <%= @user.identifier %>
					    </div>
				      </h4>
				    </div>
				  </div>

				  <div class="panel">
				    <div class="panel-heading">
				      <h4 class="panel-title panel-height">
				        <div class="col-sm-3 panel-label-color">
					        ID
					    </div>
					    <div class="col-sm-8 panel-value-color">
					        <%= @user.id %>
					    </div>
				      </h4>
				    </div>
				  </div>

				  <div class="panel">
				    <div class="panel-heading">
				      <h4 class="panel-title panel-height">
				        <div class="col-sm-3 panel-label-color">
					        Password
					    </div>
					    <div class="col-sm-8 panel-value-color">
					        **************
					    </div>
			        	<a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
			        		Edit
			        	</a>
				      </h4>
				    </div>
				    <div id="collapseThree" class="panel-collapse collapse">
				      <div class="panel-body">
				        <%= render "users/partials/edit_password" %>
						<button class="btn-danger btn" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
					  		Cancel
					  	</button>
				       
				      </div>
				    </div>
				  </div>

				  <div class="panel">
				    <div class="panel-heading">
				      <h4 class="panel-title panel-height">
				        <div class="col-sm-3 panel-label-color">
					        Email
					    </div>
					    <div class="col-sm-8 panel-value-color">
					        <%= @user.email %>
					    </div>
			        	<a data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
			        		Edit
			        	</a>
				      </h4>
				    </div>
				    <div id="collapseFour" class="panel-collapse collapse">
				      <div class="panel-body">
				        <%= render "users/partials/edit_email" %>
				        <button class="btn-danger btn" data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
					  		Cancel
					  	</button>
				      </div>
				    </div>
				  </div>

				  <div class="panel">
				    <div class="panel-heading">
				      <h4 class="panel-title panel-height">
				        <div class="col-sm-3 panel-label-color">
					        Mobile Phone
					    </div>
					    <div class="col-sm-8 panel-value-color">
					        <%= @user.phone_mobile %>
					    </div>
			        	<a data-toggle="collapse" data-parent="#accordion" href="#collapseFive">
			        		Edit
			        	</a>
				      </h4>
				    </div>
				    <div id="collapseFive" class="panel-collapse collapse">
				      <div class="panel-body">
				        <%= render "users/partials/edit_phone" %>
				        <button class="btn-danger btn" data-toggle="collapse" data-parent="#accordion" href="#collapseFive">
					  		Cancel
					  	</button>
				      </div>
				    </div>
				  </div>

				  <div class="panel">
				    <div class="panel-heading">
				      <h4 class="panel-title panel-height">
				        <div class="col-sm-3 panel-label-color">
					        Address
					    </div>
					    <div class="col-sm-8 panel-value-color">
					        <%= @user.address %>
					    </div>
			        	<a data-toggle="collapse" data-parent="#accordion" href="#collapseSix">
			        		Edit
			        	</a>
				      </h4>
				    </div>
				    <div id="collapseSix" class="panel-collapse collapse">
				      <div class="panel-body">
				        <%= render "users/partials/edit_address" %>
				        <button class="btn-danger btn" data-toggle="collapse" data-parent="#accordion" href="#collapseSix">
					  		Cancel
					  	</button>
				      </div>
				    </div>
				  </div>

				<!-- End of accordian -->
				</div>
			</div>
		</div>
	</div>
</div>